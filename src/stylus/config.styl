$font-family-base = -apple-system, BlinkMacSystemFont, 'Roboto', Helvetica Neue, Helvetica, Arial, sans-serif
$font-family-heading = 'Zilla Slab', $font-family-base
$font-family-monospace = Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace

$font-size = 16px

$background-color = #f6f7fe
$background-dark-color = #323232

$primary-color = #e02929
$secondary-color = #4b5b6c
$tertiary-color = #fd7d7d
$quarternary-color = #fceade

$success-color = #d4edda
$danger-color = #f8d7da
$info-color = #d1ecf1
$warning-color = #fff3cd

$linear-from-color = $primary-color
$linear-to-color = $tertiary-color

$text-color = #37322e
$link-color = darken($secondary-color, 15%)
$link-hover-color = darken($secondary-color, 10%)

$timing-function = cubic-bezier(0.565, 1.65, 0.765, 0.88)

$mobile-sm  = 331px
$mobile = 480px
$mobile-lg = 561px
$tablet = 769px
$desktop = 1201px
$desktop-lg = 1361px

$container-size = 1200px
$container-small-size = 960px
